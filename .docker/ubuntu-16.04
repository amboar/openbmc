FROM ubuntu:16.04

ENV DEBIAN_FRONTEND noninteractive
RUN apt-get update && apt-get install -yy \
	build-essential	\
	ccache \
	chrpath \
	cpio \
	diffstat \
	fakeroot \
	gawk \
	git \
	libsdl1.2-dev \
	locales \
	pseudo \
	python3 \
	texinfo	\
	wget

RUN locale-gen en_US.UTF-8
ENV LANG en_US.UTF-8

RUN grep -q ${__GROUPS} /etc/group || groupadd -g ${__GROUPS} ${USER}
RUN grep -q ${__UID} /etc/passwd || useradd -d ${HOME} -m -u ${__UID} -g ${__GROUPS} ${USER}
